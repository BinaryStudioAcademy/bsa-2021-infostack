{
  "name": "server",
  "version": "1.0.0",
  "description": "backend",
  "private": true,
  "main": "./src/server.ts",
  "scripts": {
    "start": "node ./server.js && npx y-webrtc",
    "start:dev": "ts-node-dev ./src/server.ts && npx y-webrtc",
    "start:fast": "ts-node-dev --respawn --type-check --notify=false --clear ./src/server.ts",
    "lint:start": "nodemon -r ./src/server.ts --exec \"npm run linter && ts-node\"",
    "lint": "npx eslint \"./src/**/*.ts\" --fix",
    "typeorm": "node_modules/.bin/ts-node node_modules/typeorm/cli.js",
    "add-migration": "node_modules/.bin/ts-node node_modules/typeorm/cli.js migration:generate -n",
    "migrate": "node_modules/.bin/ts-node node_modules/typeorm/cli.js migration:run",
    "migration-revert": "node_modules/.bin/ts-node node_modules/typeorm/cli.js migration:revert",
    "generate-seed": "node_modules/.bin/ts-node node_modules/typeorm/cli.js migration:create -d ./src/data/seeders -n",
    "seed": "node_modules/.bin/ts-node ./src/data/seeders && npm run seed:elastic",
    "seed:elastic": "node_modules/.bin/ts-node ./src/elasticsearch/seeders/seeders",
    "sync-elastic-with-db": "node_modules/.bin/ts-node ./src/elasticsearch/synchronizers/synchronizers",
    "build:ts": "tsc && tscpaths -p tsconfig.json --src . --out build",
    "build:copy": "cp -r public package.json package-lock.json build",
    "build": "npm run build:ts && npm run build:copy",
    "prod": "node --max-old-space-size=1024 -r ts-node/register ./src/server.ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cookie-parser": "1.4.2",
    "@types/cors": "2.8.12",
    "@types/cryptr": "4.0.1",
    "@types/datejs": "0.0.31",
    "@types/github-slugger": "1.3.0",
    "@types/jsonwebtoken": "8.5.4",
    "@types/markdown-it": "12.2.1",
    "@types/mime-types": "2.1.1",
    "@types/multer": "1.4.7",
    "@types/nodemailer": "6.4.4",
    "@types/puppeteer-core": "5.4.0",
    "@types/uuid": "8.3.1",
    "eslint": "7.14.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.22.1",
    "infostack-shared": "file:../shared/build",
    "nodemon": "2.0.6",
    "ts-node-dev": "1.1.0",
    "tscpaths": "0.0.9"
  },
  "dependencies": {
    "@elastic/elasticsearch": "7.13.0",
    "@google-cloud/speech": "4.7.0",
    "aws-sdk": "2.955.0",
    "axios": "0.21.1",
    "cookie-parser": "1.4.5",
    "cors": "2.8.5",
    "crypto-random-string": "3.3.0",
    "cryptr": "6.0.2",
    "date-fns": "2.23.0",
    "datejs": "1.0.0-rc3",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "github-slugger": "1.3.0",
    "googleapis": "83.0.0",
    "jsonwebtoken": "8.5.1",
    "jwks-rsa": "1.11.0",
    "markdown-it": "12.2.0",
    "mime-types": "2.1.32",
    "multer": "1.4.2",
    "nodemailer": "6.6.3",
    "pg": "8.5.1",
    "pg-connection-string": "2.5.0",
    "pino": "7.0.0-rc.1",
    "pino-pretty": "5.1.2",
    "puppeteer-core": "10.2.0",
    "reflect-metadata": "0.1.13",
    "socket.io": "4.1.3",
    "ts-node": "9.0.0",
    "typeorm": "0.2.34",
    "typescript": "4.1.2",
    "yup": "0.32.9"
  }
}
